    & common.attributes
    & common.linking.attributes
    & attribute namest { text }
    & attribute nameend { text }
    & spanname.attribute
    & char.attribute?
    & colsep.attribute?
    & charoff.attribute?
    & rowsep.attribute?
    & align.attribute?
    & local.spanspec.attributes

   db.spanspec =
      element spanspec {
         spanspec.attlist,
         empty
      }
}

