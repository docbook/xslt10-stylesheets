   cals.informaltable.info = docbook.info.titleforbidden

   cals.informaltable =
      element informaltable {
         cals.informaltable.attlist,
         cals.informaltable.info,
         indexing.inlines*,
         db.textobject*,
         (db.mediaobject+|db.tgroup+)
      }
}
